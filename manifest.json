{
  "manifest_version": 2,
  "name": "Tattl",
  "version": "0.1.0",

  "description": "Eliminate online distractions by logging your visits to potentially distracting websites",

  "icons": {
    "48": "logo/tattl.svg",
    "96": "logo/tattl.svg"
  },

  "permissions": [
    "https://tattl.herokuapp.com/*",
    "tabs",
    "activeTab",
    "storage"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "tattl@ext"
    }
  },

  "content_security_policy": "script-src 'self' https://tattl.herokuapp.com; object-src 'self'",

  "background": {
    "page": "background/index.html"
  },

  "browser_action": {
    "default_title": "Tattl",
    "default_popup": "popup/index.html"
  }
}

{
  "manifest_version": 2,
  "name": "Tattl",
  "version": "0.1.1",

  "description": "Eliminate online distractions by logging your visits to potentially distracting websites",

  "icons": {
    "16": "logo/tattl-16.png",
    "32": "logo/tattl-32.png",
    "48": "logo/tattl-48.png",
    "96": "logo/tattl-96.png",
    "128": "logo/tattl-128.png"
  },

  "permissions": ["http://localhost:8080/*", "tabs", "activeTab", "storage"],

  "browser_specific_settings": {
    "gecko": {
      "id": "tattl@ext"
    }
  },

  "content_security_policy": "script-src 'self' http://localhost:8080; object-src 'self'",

  "background": {
    "page": "background/index.html"
  },

  "browser_action": {
    "default_title": "Tattl",
    "default_popup": "popup/index.html"
  }
}
